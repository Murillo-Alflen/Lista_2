#include <stdio.h>

int main() {
    int passos = 0, total = 0;
    while (total < 10000) {
        printf("Digite a quantidade de passos dados: ");
        scanf("%d", &passos);
        total += passos;
        printf("Passos totais: %d\n", total);
    }
    printf("Meta de 10.000 passos alcanÃ§ada!\n");
    return 0;
}
