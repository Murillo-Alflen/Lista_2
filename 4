#include <stdio.h>

int main() {
    float deposito;
    do {
        printf("Digite o valor do depósito inicial: R$ ");
        scanf("%f", &deposito);
        if (deposito < 500) {
            printf("Valor inválido. Depósito mínimo é de R$ 500,00.\n");
        }
    } while (deposito < 500);
    printf("Depósito aceito: R$ %.2f\n", deposito);
    return 0;
}
