#include <stdio.h>

int main() {
    int opcao;
    do {
        printf("Escolha uma ação:\n");
        printf("1 - Ligar lâmpada\n");
        printf("2 - Tocar som\n");
        printf("3 - Mover braço\n");
        printf("0 - Encerrar\n");
        scanf("%d", &opcao);
    } while (opcao != 0);
    printf("Programa encerrado.\n");
    return 0;
}
